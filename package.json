{
    "name": "prettier-stylelint",
    "version": "0.2.1",
    "main": "index.js",
    "bin": "./cli.js",
    "author": "Hugo Dias <mail@hugodias.me> (http://hugodias.me/)",
    "license": "MIT",
    "keywords": [
        "stylelint",
        "prettier",
        "style",
        "lint",
        "linter",
        "validate",
        "code style",
        "strict",
        "check"
    ],
    "scripts": {
        "test": "nyc ava",
        "lint": "eslint --cache *.js src/*.js",
        "validate": "run-p lint test",
        "precommit": "yarn validate",
        "prepush": "yarn validate",
        "version": "yarn changelog",
        "cov": "yarn test && nyc report --reporter=html && hs coverage -s -o -c-1",
        "cov:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "devDependencies": {
        "ava": "^0.22.0",
        "codecov": "^2.3.0",
        "conventional-changelog-cli": "^1.3.3",
        "eslint-config-halo": "^2.3.3",
        "http-serve": "^1.0.1",
        "husky": "^0.14.3",
        "np": "^2.16.0",
        "npm-run-all": "^4.1.1",
        "nyc": "^11.2.1",
        "stylelint-config-recommended": "^1.0.0"
    },
    "dependencies": {
        "cosmiconfig": "^2.2.2",
        "debug": "^3.0.1",
        "get-stdin": "^5.0.1",
        "globby": "^6.1.0",
        "ignore": "^3.3.5",
        "import-local": "^0.1.1",
        "meow": "^3.7.0",
        "pify": "^3.0.0",
        "prettier": "^1.6.1",
        "stylelint": "^8.1.1",
        "temp-write": "^3.3.0",
        "tempy": "^0.2.0",
        "update-notifier": "^2.2.0"
    },
    "eslintConfig": {
        "extends": "halo/plugins",
        "parserOptions": {
            "sourceType": "script"
        }
    },
    "stylelint": {
        "extends": [
            "stylelint-config-recommended",
            "./config"
        ]
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
    }
}
