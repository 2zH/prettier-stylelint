{
    "name": "prettier-stylelint",
    "version": "0.0.1",
    "main": "index.js",
    "author": "Hugo Dias <mail@hugodias.me> (http://hugodias.me/)",
    "license": "MIT",
    "keywords": [
        "stylelint",
        "prettier",
        "style",
        "lint",
        "linter",
        "validate",
        "code style",
        "strict",
        "check"
    ],
    "devDependencies": {
        "ava": "^0.22.0",
        "eslint-config-halo": "^2.3.3",
        "np": "^2.16.0"
    },
    "eslintConfig": {
        "extends": "halo/plugins"
    },
    "scripts": {
        "test": "ava"
    },
    "dependencies": {
        "@std/esm": "^0.7.1",
        "cosmiconfig": "^2.2.2",
        "get-stdin": "^5.0.1",
        "globby": "^6.1.0",
        "meow": "^3.7.0",
        "prettier": "^1.6.1",
        "stylelint": "^8.1.1",
        "temp-write": "^3.3.0",
        "tempy": "^0.1.0"
    },
    "@std/esm": {
        "esm": "all"
    },
    "stylelint": {
        "rules": {
            "string-quotes": "single",
            "color-no-invalid-hex": true,
            "indentation": [
                4,
                {
                    "except": [
                        "value"
                    ]
                }
            ]
        }
    }
}
